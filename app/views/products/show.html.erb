<section class="products-show">
  <header class="page-header">
    <h1>
      <%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %>
    </h1>
  </header>

  <article class="product-detail">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name:</dt>
          <dd><%= @product.name %></dd>
          <dt>Description:</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity:</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price:</dt>
          <dd>$<%= @product.price %></dd>
          <dt>Average Rating:</dt>
          <dd><%= @product.average_rating.to_i %>
        </dl>
      </div>
    </div>
    <br>
    <br>

      <% if current_user %>
        <div class="container">
          <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h4 class="panel-title">
                  Add a review for <strong><%= @product.name %></strong>:
                </h4>
                </div>
                  <div class="panel-body">

                  <%= form_for [@product, @review] do %>

                    <textarea name="review[description]" id="review_description"></textarea>

                <form id="ratingsForm">
                  <div class="stars">
                    <input type="radio" name="star" class="star star-5" id="star-5" value="5" />
                    <label class="star star-5" for="star-5"></label>

                    <input type="radio" name="star" class="star star-4" id="star-4" value="4"/>
                    <label class="star star-4" for="star-4"></label>

                    <input type="radio" name="star" class="star star-3" id="star-3" value="3"/>
                    <label class="star star-3" for="star-3"></label>

                    <input type="radio" name="star" class="star star-2" id="star-2" value="2"/>
                    <label class="star star-2" for="star-2"></label>

                    <input type="radio" name="star" class="star star-1" id="star-1" value="1"/>
                    <label class="star star-1" for="star-1"></label>

                    <span></span>
                  </div>
                    <input type="submit" name="commit" value="Submit Review" class="btnreview">
                  </form>
                <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h6 class="panel-title">
                Other reviews for <strong><%= @product.name %></strong>:
              </h6>
            </div>
            <div class="panel-body">
              <ul class="list-group">
                <% @product.reviews.each do |r| %>
                  <li class="list-group-item">
                    <h4><strong><%= r.user.name %>:</strong></h4>
                      <small><strong>Rated this product: </strong><%= r.rating %>/5 </small>
                          <br>
                          <p>
                            <%= r.description %>
                          </p>
                            <% if r.user == current_user %>
                              <%= button_to 'Delete', product_review_path(product_id: @product, id: r.id), method: :delete, class: 'btn btn-danger' %>
                            <% end %>
                          <br>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</section>
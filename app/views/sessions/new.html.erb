
<%= form_tag '/login' do %>


<div class="container">
    <div class="row">
        <div class="col-md-offset-5 col-md-3">
            <div class="form-login">
            <h4>Welcome!</h4>
            <input type="email" id="email" class="form-control input-sm chat-input" placeholder="e-mail"<%= text_field_tag :email %>
            </br>
            <input type="password" id="userPassword" class="form-control input-sm chat-input" placeholder="password" <%= password_field_tag :password %>
            </br>
            <div class="wrapper">
            <span class="group-btn">
                <input type= "submit" href="#" class="btn btn-primary btn-md">
            </span>
            </div>
            </div>
        </div>
    </div>
</div>
<% end %>